# =============================================================================
# MVP Config-Driven Data Pipeline - Environment Variables
# =============================================================================
# Copy this file to .env and update the values according to your environment

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
ENVIRONMENT=local
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# LOCAL DEVELOPMENT (MinIO + Kafka)
# =============================================================================
# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio12345
MINIO_SECURE=false

# Kafka Configuration (for local Event Hub simulation)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=data-pipeline-events

# =============================================================================
# AZURE CONFIGURATION
# =============================================================================
# Azure AD Authentication
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# Azure Resources (set by Terraform outputs)
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=rg-mvp-data-pipeline
AZURE_LOCATION=eastus

# Azure Key Vault
AZURE_KEY_VAULT_NAME=kv-mvp-data-pipeline-dev
AZURE_KEY_VAULT_URL=https://kv-mvp-data-pipeline-dev.vault.azure.net/

# Azure Storage Account
AZURE_STORAGE_ACCOUNT_NAME=stmvpdatapipelinedev
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key-here
AZURE_STORAGE_CONTAINER_RAW=raw
AZURE_STORAGE_CONTAINER_SILVER=silver
AZURE_STORAGE_CONTAINER_QUARANTINE=quarantine

# Azure Event Hub
AZURE_EVENT_HUB_NAMESPACE=eh-mvp-data-pipeline-dev
AZURE_EVENT_HUB_NAME=data-pipeline-events
AZURE_EVENT_HUB_CONNECTION_STRING=your-eventhub-connection-string-here

# Azure SQL Database
AZURE_SQL_SERVER=sql-mvp-data-pipeline-dev.database.windows.net
AZURE_SQL_DATABASE=sqldb-mvp-data-pipeline-dev
AZURE_SQL_USERNAME=sqladmin
AZURE_SQL_PASSWORD=your-sql-password-here

# Azure Application Insights
AZURE_APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string-here
AZURE_APPLICATION_INSIGHTS_INSTRUMENTATION_KEY=your-instrumentation-key-here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Encryption
ENCRYPTION_KEY=your-base64-encryption-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Security Context
DEFAULT_SECURITY_LEVEL=CONFIDENTIAL
DEFAULT_ACCESS_LEVEL=READ_ONLY
AUDIT_ENABLED=true

# =============================================================================
# PIPELINE CONFIGURATION
# =============================================================================
# Default Pipeline Settings
DEFAULT_DATASET=finanzas/payments_v1
DEFAULT_ENV_CONFIG=local
PIPELINE_TIMEOUT_MINUTES=30
MAX_RETRY_ATTEMPTS=3

# Data Quality
ENABLE_DATA_QUALITY_CHECKS=true
QUARANTINE_THRESHOLD=0.05
REJECT_THRESHOLD=0.01

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================
# Logging
LOG_FORMAT=json
LOG_FILE_PATH=logs/pipeline.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# Metrics
ENABLE_METRICS=true
METRICS_EXPORT_INTERVAL=60
ENABLE_PERFORMANCE_MONITORING=true

# Correlation and Tracing
ENABLE_CORRELATION_ID=true
ENABLE_DISTRIBUTED_TRACING=true
TRACE_SAMPLING_RATE=0.1

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================
# Testing
TEST_DATA_PATH=tests/data
ENABLE_TEST_MODE=false
MOCK_AZURE_SERVICES=false

# Development
ENABLE_DEBUG_LOGS=false
ENABLE_PROFILING=false
DEVELOPMENT_MODE=true

# =============================================================================
# OPTIONAL: ADVANCED CONFIGURATION
# =============================================================================
# Spark Configuration
SPARK_MASTER=local[*]
SPARK_APP_NAME=mvp-config-driven-pipeline
SPARK_EXECUTOR_MEMORY=2g
SPARK_DRIVER_MEMORY=1g

# Performance Tuning
ENABLE_CACHING=true
CACHE_TTL_MINUTES=60
PARALLEL_PROCESSING_WORKERS=4

# Backup and Recovery
ENABLE_BACKUP=true
BACKUP_RETENTION_DAYS=7
ENABLE_POINT_IN_TIME_RECOVERY=false