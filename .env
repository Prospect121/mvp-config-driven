# MinIO Configuration (Azure Data Lake Storage Gen2 Simulator)
MINIO_CONSOLE_PORT=9001
MINIO_API_PORT=9000
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio12345

# SQL Server Configuration (Azure SQL Database Simulator)
SQL_SERVER_HOST=localhost
SQL_SERVER_PORT=1433
SQL_SERVER_USER=sa
SQL_SERVER_PASSWORD=YourStrong!Passw0rd
SQL_SERVER_DATABASE=mvp_config_driven

# Kafka Configuration (Azure Event Hubs Simulator)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_ZOOKEEPER_CONNECT=localhost:2181
KAFKA_TOPIC_TELEMETRY=telemetry-events
KAFKA_TOPIC_TRANSACTIONS=transaction-events

# Redis Configuration (Azure Cache for Redis Simulator)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispassword

# Docker Configuration
NETWORK_NAME=mvp-config-driven-net

# Spark Configuration
JAVA_TOOL_OPTIONS=-Duser.home=/tmp -Divy.home=/tmp/.ivy2 -Duser.name=spark
SPARK_MASTER_URL=spark://localhost:7077

# S3A Configuration for Spark
S3A_ENDPOINT=http://minio:9000
S3A_ACCESS_KEY=minio
S3A_SECRET_KEY=minio12345

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=admin123
PROMETHEUS_RETENTION_TIME=200h

# Jupyter Configuration
JUPYTER_TOKEN=jupyter123

# Application Configuration
ENVIRONMENT=local
LOG_LEVEL=INFO
ENABLE_MONITORING=true

# Timezone
TZ=America/Bogota

